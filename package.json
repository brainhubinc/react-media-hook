{
  "name": "react-media-hook",
  "version": "0.2.0",
  "description": "React Hook for media query",
  "main": "./dist/index.js",
  "scripts": {
    "flow": "flow",
    "flow:check": "flow check",
    "prettier": "prettier \"*/**/*.js\" --ignore-path ./.prettierignore --write && git add . && git status",
    "build": "npm run build:clean && npm run build:lib && npm run build:flow",
    "build:clean": "rimraf dist",
    "build:lib": "cross-env BABEL_ENV=production babel src --out-dir dist --ignore '**/__tests__/**'",
    "build:flow": "flow-copy-source -v -i '**/__tests__/**' src dist",
    "prepublish": "npm run flow:check && npm run build"
  },
  "files": [
    "dist",
    "src"
  ],
  "pre-commit": [
    "prettier",
    "flow:check"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lessmess-agency/react-media-hook.git"
  },
  "keywords": [
    "react",
    "hook",
    "media"
  ],
  "author": "Ilya Lesik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lessmess-agency/react-media-hook/issues"
  },
  "homepage": "https://github.com/lessmess-agency/react-media-hook#readme",
  "peerDependencies": {
    "react": ">=16.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-react-flow-props-to-prop-types": "^0.15.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "cross-env": "^5.2.0",
    "flow-bin": "^0.89.0",
    "flow-copy-source": "^2.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2"
  }
}